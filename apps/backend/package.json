{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend for Word Scramble Game",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon server.js",
    "build": "tsc",
    "start": "node server.js",
    "lint": "eslint .",
    "postinstall": "node scripts/fetchDictionary.js",
    "fetch-dictionary": "node scripts/fetchDictionary.js",
    "test": "cross-env NODE_ENV=test mocha --timeout 10000 --exit 'tests/**/*.test.js'",
    "test:unit": "cross-env NODE_ENV=test mocha --timeout 10000 --exit 'tests/unit/**/*.test.js'",
    "test:integration": "cross-env NODE_ENV=test mocha --timeout 10000 --exit 'tests/integration/**/*.test.js'",
    "test:coverage": "cross-env NODE_ENV=test nyc --reporter=text --reporter=lcov mocha --timeout 10000 --exit 'tests/**/*.test.js'"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^7.2.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.0",
    "morgan": "^1.10.0",
    "shared": "*",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "xss-clean": "^0.1.4",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.5",
    "@types/chai": "^4.3.10",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/mocha": "^10.0.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.9.0",
    "@types/supertest": "^2.0.16",
    "chai": "^4.3.10",
    "cross-env": "^7.0.3",
    "eslint": "^8.53.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.0",
    "nyc": "^15.1.0",
    "supertest": "^6.3.3",
    "typescript": "^5.2.2"
  }
}
