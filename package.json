{
  "name": "word-scramble-game",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "cd apps/backend && node scripts/fetchDictionary.js",
    "dictionary": "cd apps/backend && node scripts/fetchDictionary.js",
    "postinstall": "cd apps/backend && node scripts/fetchDictionary.js"
  },
  "devDependencies": {
    "eslint": "^8.53.0",
    "prettier": "^3.0.3",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "packageManager": "npm@10.1.0"
}